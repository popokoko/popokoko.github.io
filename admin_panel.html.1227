        function loadProducts() {
            const productsRef = collection(db, 'artifacts', appId, 'public', 'data', 'products');
            const q = query(productsRef, orderBy("timestamp", "desc"));

            onSnapshot(q, (snapshot) => {
                productList.innerHTML = '';
                permissionAlert.style.display = 'none';

                if (snapshot.empty) {
                    productList.innerHTML = '<div class="text-center text-gray-400 py-12 font-bold text-lg">ğŸƒ é€™è£¡ç©ºç©ºå¦‚ä¹Ÿ...<br>å¿«å»ä¸Šæ¶ä¸€äº›å¯¶è²å§ï¼</div>';
                    return;
                }

                snapshot.forEach((docSnap) => {
                    const p = docSnap.data();
                    const id = docSnap.id;

                    let catColor = "bg-gray-100 text-gray-600";
                    let catIcon = "ğŸ“¦";
