                    if (p.category === 'minimal') { catColor = "bg-[#d7ccc8] text-[#5d4037]"; catIcon = "ğŸŒ¿"; }
                    if (p.category === 'limited') { catColor = "bg-[#fff9c4] text-[#fbc02d]"; catIcon = "âœ¨"; }

                    const safeName = (p.name || "").replace(/'/g, "&apos;").replace(/"/g, "&quot;");
                    const safeDesc = (p.description || "").replace(/'/g, "&apos;").replace(/"/g, "&quot;");
