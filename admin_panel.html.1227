        }

        // --- éœ²ç‡Ÿè»Šæ‹–æ›³é‚è¼¯ ---
        const van = document.getElementById('movie-van');
        let isDragging = false;
        let startX, startY;

        // æ»‘é¼ /è§¸æ§ æŒ‰ä¸‹
        const startDrag = (e) => {
            // å¿½ç•¥é»æ“Šå½±ç‰‡æ§åˆ¶é …çš„æƒ…æ³
            if (e.target.tagName === 'VIDEO') return;

            isDragging = true;
            van.classList.add('dragging');
            van.style.cursor = 'grabbing';

            // å–å¾—æ¸¸æ¨™ä½ç½®
            const clientX = e.clientX || e.touches[0].clientX;
            const clientY = e.clientY || e.touches[0].clientY;

            // å–å¾—å…ƒç´ ç›®å‰çš„ offset (ç›¸å°æ–¼è¦–çª—)
            const rect = van.getBoundingClientRect();

            // è¨ˆç®—æ¸¸æ¨™èˆ‡å…ƒç´ å·¦ä¸Šè§’çš„è·é›¢
            startX = clientX - rect.left;
            startY = clientY - rect.top;

            // åˆ‡æ›å®šä½æ–¹å¼ï¼šå¾ bottom/right æ”¹ç‚º top/left ä»¥ä¾¿æ‹–æ›³
            // æ³¨æ„ï¼šé€™æœƒå°è‡´ç¬¬ä¸€æ¬¡é»æ“Šæ™‚ä½ç½®å¾®èª¿ï¼Œä½†å°æ‹–æ›³ä¾†èªªæ˜¯å¿…è¦çš„
            van.style.bottom = 'auto';
            van.style.right = 'auto';
            van.style.left = rect.left + 'px';
            van.style.top = rect.top + 'px';

            e.preventDefault(); // é˜²æ­¢é¸å–æ–‡å­—ç­‰é è¨­è¡Œç‚º
        };

        // æ»‘é¼ /è§¸æ§ ç§»å‹•
        const onDrag = (e) => {
            if (!isDragging) return;

            const clientX = e.clientX || (e.touches ? e.touches[0].clientX : 0);
            const clientY = e.clientY || (e.touches ? e.touches[0].clientY : 0);

            // è¨ˆç®—æ–°ä½ç½®
            let newX = clientX - startX;
            let newY = clientY - startY;

            // é‚Šç•Œæª¢æŸ¥ (é˜²æ­¢æ‹–å‡ºè¦–çª—)
            const winWidth = window.innerWidth;
            const winHeight = window.innerHeight;
            const vanWidth = van.offsetWidth;
            const vanHeight = van.offsetHeight;

            if (newX < 0) newX = 0;
            if (newY < 0) newY = 0;
            if (newX + vanWidth > winWidth) newX = winWidth - vanWidth;
            if (newY + vanHeight > winHeight) newY = winHeight - vanHeight;

            van.style.left = newX + 'px';
            van.style.top = newY + 'px';
        };

        // æ»‘é¼ /è§¸æ§ æ”¾é–‹
        const endDrag = () => {
            if (isDragging) {
                isDragging = false;
                van.classList.remove('dragging');
                van.style.cursor = 'grab';
            }
        };

        // ç¶å®šäº‹ä»¶ (æ”¯æ´æ»‘é¼ èˆ‡è§¸æ§)
        van.addEventListener('mousedown', startDrag);
        document.addEventListener('mousemove', onDrag);
        document.addEventListener('mouseup', endDrag);

        van.addEventListener('touchstart', startDrag, { passive: false });
        document.addEventListener('touchmove', onDrag, { passive: false });
        document.addEventListener('touchend', endDrag);

        // ç¦æ­¢æ‰€æœ‰åœ–ç‰‡çš„å³éµé¸å–®èˆ‡æ‹–æ‹½
        // å¼•å…¥çµ±ä¸€è³‡å®‰é˜²è­·è…³æœ¬ (Asset Protection & URL Masking)
    </script>
